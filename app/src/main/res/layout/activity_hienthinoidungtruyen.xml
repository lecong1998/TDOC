<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".hienthinoidungtruyen">

    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/purple_200">

        <ImageButton
            android:background="#00000000"
            android:id="@+id/back_noidungtruyen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

    </RelativeLayout>

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:paddingRight="10dp"
                    android:background="@drawable/duongvien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Huyền huyễn"
                    android:drawableLeft="@drawable/ic_baseline_menu_book_24"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:id="@+id/noidungtruyentheloai"/>
                <TextView
                    android:background="@drawable/duongvien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên truyện"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/tentruyen_noidungtruyen"/>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/vien"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="Ch.số: "
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/chuongso_noidungtruyen"/>
                <TextView
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thiên đạo thư viện"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/tieude_noidtruyen"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <ScrollView
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:background="@drawable/duongvien"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="nội dung truyện"
                            android:textSize="15sp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:id="@+id/noidungtruyen_ndtruyen"/>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>






</LinearLayout>